<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="SauceDemo Suite" parallel="methods" thread-count="3" data-provider-thread-count="3">
  <listeners>
    <listener class-name="utils.TestListener"/>
  </listeners>
  <test name="Chrome">
    <parameter name="browser" value="chrome"/>
    <classes>
      <class name="tests.LoginTests"/>
      <class name="tests.SortingTests"/>
      <class name="tests.CartTests"/>
      <class name="tests.CheckoutFlowTests"/>
    </classes>
  </test>
  <!-- Additional parallel test for different browser -->
  <test name="Edge" parallel="methods">
    <parameter name="browser" value="edge"/>
    <classes>
      <class name="tests.LoginTests"/>
    </classes>
  </test>
</suite>
